
generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  password String
  name     String
}

model Project {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  image       String
  description String
  link        String
  createdAt   DateTime @default(now())
}

model Skill {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  level     Int
  image     String?
  createdAt DateTime @default(now())
}


model Contact {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  email   String
  message String
  createdAt DateTime @default(now())
}
